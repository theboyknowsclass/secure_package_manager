# =============================================================================
# SECURE PACKAGE MANAGER - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update values for your environment
# For development, copy to .env.development
# For production, copy to .env.production

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_NAME=secure-package-manager
FRONTEND_APP_NAME=secure-package-manager-frontend

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================
# Ports (change if you have conflicts)
FRONTEND_PORT=3000
API_PORT=5000
DATABASE_PORT=5432
IDP_PORT=8081
NPM_REGISTRY_PORT=8080
TRIVY_PORT=4954

# Hosts
LOCALHOST=localhost
DOCKER_HOST=localhost

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Secret (CHANGE IN PRODUCTION!)
JWT_SECRET=dev-secret-key-change-in-production

# Flask Secret Key (CHANGE IN PRODUCTION!)
FLASK_SECRET_KEY=dev-secret-key

# Identity Provider Secret Key (CHANGE IN PRODUCTION!)
IDP_SECRET_KEY=idp-secret-key

# OAuth Configuration
OAUTH_AUDIENCE=secure-package-manager
OAUTH_ISSUER=http://localhost:8081

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database Credentials (CHANGE IN PRODUCTION!)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=secure_package_manager

# Database URL (constructed automatically, but can be overridden)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/secure_package_manager

# =============================================================================
# DEFAULT USERS (Development Only)
# =============================================================================
# Default admin credentials (should only be used in development)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin
DEFAULT_ADMIN_EMAIL=admin@company.com

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# NPM Registry URL
SECURE_REPO_URL=http://localhost:8080

# Trivy URL
TRIVY_URL=http://trivy:4954

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# API URL for frontend
FRONTEND_API_URL=http://localhost:5000

# ADFS Configuration (for production)
ADFS_ENTITY_ID=http://localhost:3000
ADFS_SSO_URL=http://localhost:8081/sso

# =============================================================================
# FLASK CONFIGURATION
# =============================================================================
FLASK_ENV=development
FLASK_DEBUG=1
LOG_LEVEL=DEBUG

# =============================================================================
# PACKAGE CACHE CONFIGURATION
# =============================================================================
PACKAGE_CACHE_DIR=./package_cache
MAX_PACKAGE_SIZE=100MB
