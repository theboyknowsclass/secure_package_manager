# Production Environment Variables
# Copy this file to .env.production and fill in your values

# Database Configuration
POSTGRES_DB=secure_package_manager
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# ADFS Configuration (Required)
ADFS_ENTITY_ID=https://your-domain.com
ADFS_SSO_URL=https://your-adfs-server.com/adfs/ls/
ADFS_CERT_PATH=/app/certs/adfs.crt

# Repository Configuration
NPM_PROXY_URL=https://registry.npmjs.org
SECURE_REPO_URL=https://your-secure-registry.com

# Frontend Configuration
FRONTEND_API_URL=https://your-api-domain.com

# Trivy Configuration
TRIVY_URL=http://trivy:4954
TRIVY_TIMEOUT=300
TRIVY_MAX_RETRIES=3

# Flask Configuration
FLASK_SECRET_KEY=your_very_secure_secret_key_here
