# Production Environment Configuration
# This file contains all environment variables needed for production

# Application Configuration
APP_NAME=Secure Package Manager
FLASK_ENV=production
FLASK_DEBUG=0

# Security Configuration
JWT_SECRET=CHANGE_ME_IN_PRODUCTION_JWT_SECRET
FLASK_SECRET_KEY=CHANGE_ME_IN_PRODUCTION_FLASK_SECRET
IDP_SECRET_KEY=CHANGE_ME_IN_PRODUCTION_IDP_SECRET

# OAuth & IDP Configuration
OAUTH_AUDIENCE=secure-package-manager
OAUTH_ISSUER=https://your-idp.example.com
IDP_PORT=8081

# ADFS Configuration
ADFS_ENTITY_ID=https://your-app.example.com
ADFS_SSO_URL=https://your-idp.example.com/sso
ADFS_CERT_PATH=/app/certs/adfs.crt

# Database Configuration
DATABASE_PORT=5432
DATABASE_URL=postgresql://postgres:CHANGE_ME_IN_PRODUCTION@db:5432/secure_package_manager
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_IN_PRODUCTION
POSTGRES_DB=secure_package_manager

# External Services Configuration
TRIVY_PORT=4954
TRIVY_URL=http://trivy:4954
TRIVY_TIMEOUT=300
TRIVY_MAX_RETRIES=3

# Repository Configuration
SOURCE_REPOSITORY_URL=https://registry.npmjs.org
TARGET_REPOSITORY_URL=https://your-registry.example.com

# Flask Configuration
API_PORT=5000
FRONTEND_PORT=3000
LOCALHOST=localhost
DOCKER_HOST=localhost
MAX_CONTENT_LENGTH=16777216

# Frontend Configuration
VITE_API_URL=https://your-api.example.com
VITE_ADFS_ENTITY_ID=https://your-app.example.com

# Default Admin User (Production)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=CHANGE_ME_IN_PRODUCTION
DEFAULT_ADMIN_EMAIL=admin@yourcompany.com
