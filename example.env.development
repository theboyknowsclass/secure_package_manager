# Development Environment Configuration
# This file contains all environment variables needed for development

# Application Configuration
APP_NAME=Secure Package Manager
FLASK_ENV=development
FLASK_DEBUG=1

# Security Configuration
JWT_SECRET=dev-jwt-secret-key-change-in-production
FLASK_SECRET_KEY=dev-flask-secret-key-change-in-production
IDP_SECRET_KEY=dev-idp-secret-key-change-in-production

# OAuth & IDP Configuration
OAUTH_AUDIENCE=secure-package-manager
OAUTH_ISSUER=http://${localhost}:8081
IDP_PORT=8081

# ADFS Configuration
ADFS_ENTITY_ID=http://${localhost}:3000
ADFS_SSO_URL=http://${localhost}:8081/sso
ADFS_CERT_PATH=/app/certs/adfs.crt

# Database Configuration
DATABASE_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=secure_package_manager

# External Services Configuration
TRIVY_PORT=4954
TRIVY_URL=http://${localhost}:4954
TRIVY_TIMEOUT=300
TRIVY_MAX_RETRIES=3

# Repository Configuration
SOURCE_REPOSITORY_URL=https://registry.npmjs.org
TARGET_REPOSITORY_URL=http://secure_package_manager-mock-npm-registry-1:8080

# Flask Configuration
API_PORT=5000
FRONTEND_PORT=3000
LOCALHOST=${localhost}
DOCKER_HOST=unix:///var/run/docker.sock
MAX_CONTENT_LENGTH=16777216

# Frontend Configuration
VITE_API_URL=http://${localhost}:5000
VITE_ADFS_ENTITY_ID=http://${localhost}:3000

# Default Admin User (Development Only)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123
DEFAULT_ADMIN_EMAIL=admin@example.com
